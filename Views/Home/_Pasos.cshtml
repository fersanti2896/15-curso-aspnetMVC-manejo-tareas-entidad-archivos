
<label>
    <i class="bi bi-check-square"></i>
    Pasos de la Tarea
</label>
<button type="button" class="btn btn-primary btn-sm" onclick="manejarAgregarPaso()">
    <i class="bi bi-plus"></i>
</button>

<div id="reordenable-pasos" data-bind="foreach: pasos">
    <div class="mt-2">
        <div class="row">
            <div class="col-1">
                <input type="checkbox"
                       class="form-check-input"
                       name="chbPaso"
                       data-bind="checked: realizado, 
                                  click: manejarCheckboxPaso, 
                                  attr: {'data-id': id}"
                />
            </div>

            <div class="col-11">
                <span style="cursor: pointer" 
                      data-bind="text: descripcion, 
                                 hidden: modoEdicion, 
                                 click: manejarDescripcionPaso,
                                 css: { 'text-decoration-line-through': realizado }">
                </span>
                <textarea name="txtPasoDescripcion" 
                          class="form-control" 
                          placeholder="Agregue una descripcion"
                          data-bind="{ value: descripcion, visible: modoEdicion }"  >
                </textarea>

                <div class="mt-2" data-bind="{ visible: modoEdicion }">
                    <button class="btn btn-success" data-bind="{ click: manejarSalvarPaso }">Salvar</button>
                    <button class="btn btn-danger" data-bind="{ click: manejarCancelarPaso }">Cancelar</button>
                    <button class="btn btn-danger" data-bind="{ hidden: esNuevo, click: manejarBorrarPaso }">Borrar</button>
                </div>
            </div>
        </div>
    </div>
</div>