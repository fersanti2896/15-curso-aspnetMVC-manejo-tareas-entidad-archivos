
<div class="modal fade" 
     id="modal-editar-tarea" 
     tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" 
                    id="modal-editar-tarea-titulo" 
                    data-bind="text: titulo">   
                </h5>
                <button type="button" 
                            class="btn-close"
                            data-bs-dismiss="modal">
                </button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-9">
                        <div class="form-floating mb-3">
                            <input type="text" 
                                   class="form-control"
                                   id="txtTituloCrearTarea"
                                   placeholder="Titulo"
                                   data-bind="value: titulo, event: { change: cambioEditarTarea }" />
                            <label for="txtTituloCrearTarea">Titulo de la Tarea</label>
                        </div>
                        <div class="mb-3">
                            <label>Descripción</label>
                            <textarea type="text" 
                                      class="form-control" 
                                      rows="4" 
                                      data-bind="value: descripcion, event: { change: cambioEditarTarea }">
                            </textarea>
                        </div>

                        <div class="mb-3">
                            <partial name="_Pasos" />
                        </div>

                    </div>

                    <div class="col-lg-3">
                        <button class="btn btn-success mb-2 w-100 text-start"
                                data-bind="{ click: intBorrarTarea }">
                            <i class="bi bi-x-lg"></i>
                            Borrar Tarea
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>