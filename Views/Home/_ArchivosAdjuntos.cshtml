
<label>
    <i class="bi bi-paperclip"></i>
    Archivos Adjuntos
</label>

<button onclick="manejarAgregarArchivo()">
    <i class="bi bi-plus"></i>
</button>

<input type="file" 
       onchange="manejarSeleccionarArchivo(event)"
       id="archivoATarea" 
       style="display: none" multiple />

<div data-bind="foreach: archivosAdjuntos">
    <div>
        <div style="cursor: pointer" data-bind="text: titulo"></div>
        <div>
            Agregado <span data-bind="text: publicado"></span> -
            <span class="fw-bold" style="cursor: pointer">Borrar</span> -
            <span class="fw-bold" style="cursor: pointer">Descargar</span>
        </div>
    </div>
</div>